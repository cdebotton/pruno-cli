import React from "react";{{#if stores}}
{{#if stores}}import {StoreListenerMixin} from "fluxd";{{/if}}
{{#each stores}}import {{this}} from "../stores/{{this}}.js";
{{/each}}{{/if}}
var {{componentName}} = React.createClass({ {{#if mixins}}
  mixins: [{{mixins}}],
  {{/if}}

  getInitialState() { {{#if stores}}{{#each stores}}
    var {{camelcase this}} = {{this}}.getState().state;{{/each}}{{/if}}
    return {};
  },

  getDefaultProps() {
    return {};
  },{{#if stores}}

  componentDidMount() {
    {{#each stores}}
    this.listenTo({{this}}, this.onStoreChange);
    {{/each}}
  },

  onStoreChange() {
    this.setState(this.getInitialState());
  },{{/if}}

  render() {
    return (
      <div className="{{className}}">

      </div>
    )
  }
});

export default {{componentName}};
